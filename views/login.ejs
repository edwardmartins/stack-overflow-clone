<%- include('header_init', {style: '/css/login.css' }) %>
    <main class="main-content">
        <div class="login-box">

            <form action="/auth/login" method="POST" >
                <!--Correo-->
                <label for="email">Correo*</label>
                <input type="email" placeholder=" Introduce el correo" name="email" required>
                <!--Contraseña-->
                <label for="password">Contraseña*</label>
                <input type="password" placeholder=" Introduce la contraseña" name="password" required>
                <!--Iniciar sesion-->
                <button class="button" type="submit">Iniciar sesion</button>

                <!--Crear sesion-->
                <a class="button" href="/auth/register"> Crear cuenta</a>
            </form>

        </div>
        <p class="error-msg"><%=errorMsg%></p>
        <p class="success-msg"><%=registerSucces%></p>
        
    </main>
</body>

</html>