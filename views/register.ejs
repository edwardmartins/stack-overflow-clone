<%- include('header_init', {style: '/css/register.css' }) %>
    <main class="main-content">

        <div class="register-box">
            <form method="POST" action="/auth/register" enctype="multipart/form-data">
                <!--Email-->
                <label for="email">Correo*</label>
                <input type="email" placeholder="Introduce el correo" name="email" required>
                <!--Contraseña-->
                <label for="password">Contraseña*</label>
                <input type="password" placeholder=" Introduce la contraseña" name="password" required>
                <!--Confirmar Contraseña-->
                <label for="pass_confirm">Confirmar contraseña*</label>
                <input type="password" placeholder="Introduce la contraseña" name="pass_confirm" required>
                <!--Username-->
                <label for="username">Nombre para mostrar*</label>
                <input type="text" placeholder="Introduce el nombre de usuario" name="username" required>
                <!--Imagen-->
                <label for="img">Imagen de perfil:</label>
                <input type="file" name="image" accept="image/*">

                <!--Crear cuenta-->
                <button class="button" type="submit">Crear cuenta</button>

                <!--login-->
                <a class="button" href="/auth/login">Iniciar sesion</a>
            </form>
        </div>
        <p class="error-msg"><%=errorMsg%></p>
    </main>
</body>

</html>